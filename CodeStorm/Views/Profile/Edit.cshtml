@model Abc.Website.Models.UserProfile
@{
  ViewBag.Title = "Edit My Profile";
  ViewBag.Description = "Edit";
  Layout = "~/Views/Shared/Layouts/_ProfileLayout.cshtml";
}
<div class="band mt25 mb100 codestorm-user-profile-view edit">
  <div class="container">
    <div class="row">
      <div class="span3">
        <a href="/DevOp/@Model.AbcHandle">
          <img src="http://www.gravatar.com/avatar/@Model.Gravatar?size=200" class="img-polaroid" /></a>

        <hr />

        <h3><a href="/DevOp/@Model.AbcHandle">@Model.UserName</a></h3>
        <h5><a href="/DevOp/@Model.AbcHandle">@Model.AbcHandle</a></h5>

        <hr />

        <p><i class="icon-envelope"></i>&nbsp;<a href="mailto:@Model.Email" title="Email @Model.UserName">@Model.Email</a></p>
        <p><i class="icon-share"></i>&nbsp;<a href="http://github.com/@Model.GitHubHandle" target="_blank">Github</a></p>
        <p><i class="icon-adjust"></i>&nbsp;@Model.TimeZone.DisplayName</p>
        <p><i class="icon-globe"></i>&nbsp;@Model.City</p>
      </div>
      <div class="span9">

        <ul class="tabs">
          <li><a class="active" href="#"><i class="icon-user"></i>Profile</a></li>
        </ul>
        <ul class="tabs-content">
          <li class="active">
