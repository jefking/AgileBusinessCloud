                  <label class="control-label" for="inputTwitter">Twitter</label>
                  <div class="controls">
                    @Html.TextBoxFor(u => u.TwitterHandle, Model.TwitterHandle, new { @class = "span4", placeholder = "Enter your Twitter handle" })
                  </div>
                  <hr />
                  <div class="controls">
                    <button class="m-btn green" type="submit">Update &nbsp;<i class="m-icon-swapright m-icon-white"></i></button>
